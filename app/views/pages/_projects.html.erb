<div class="space-y-12">
  <h2 class="section-title"><%= t('projects.title') %></h2>

  <%# Professional Projects %>
  <div class="space-y-6">
    <div class="space-y-2">
      <h3 class="text-2xl font-bold text-gray-900 dark:text-white">
        <%= t('projects.categories.professional.title') %>
      </h3>
      <p class="text-gray-600 dark:text-gray-400">
        <%= t('projects.categories.professional.description') %>
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <% t('projects.categories.professional.projects').each do |project| %>
      <div class="card group hover:border-primary-500 transition-colors">
        <div class="space-y-4">
          <%# Header %>
          <div class="flex items-start justify-between">
            <div class="flex items-center gap-3">
              <span class="text-2xl"><%= project[:icon] %></span>
              <h4 class="text-lg font-semibold text-gray-900 dark:text-white">
                <%= project[:name] %>
              </h4>
            </div>
          </div>

          <%# Description %>
          <p class="text-gray-600 dark:text-gray-300">
            <%= project[:description] %>
          </p>

          <%# Tags %>
          <div class="flex flex-wrap gap-2">
            <% project[:tags].each do |tag| %>
            <span class="px-2 py-1 text-xs font-medium text-primary-600 dark:text-primary-400 bg-primary-50 dark:bg-primary-900/10 rounded-full">
              <%= tag %>
            </span>
            <% end %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>

  <%# Personal Projects %>
  <div class="space-y-6">
    <div class="space-y-2">
      <h3 class="text-2xl font-bold text-gray-900 dark:text-white">
        <%= t('projects.categories.personal.title') %>
      </h3>
      <p class="text-gray-600 dark:text-gray-400">
        <%= t('projects.categories.personal.description') %>
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <% t('projects.categories.personal.projects').each do |project| %>
      <div class="card group hover:border-primary-500 transition-colors">
        <div class="space-y-4">
          <%# Header %>
          <div class="flex items-start justify-between">
            <div class="flex items-center gap-3">
              <span class="text-2xl"><%= project[:icon] %></span>
              <h4 class="text-lg font-semibold text-gray-900 dark:text-white">
                <%= project[:name] %>
              </h4>
            </div>
            <% if project[:link].present? %>
            <%= link_to project[:link], target: "_blank", rel: "noopener", 
                    class: "text-primary-500 hover:text-primary-600 dark:hover:text-primary-400" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
            <% end %>
            <% end %>
          </div>

          <%# Description %>
          <p class="text-gray-600 dark:text-gray-300">
            <%= project[:description] %>
          </p>

          <%# Tags %>
          <div class="flex flex-wrap gap-2">
            <% project[:tags].each do |tag| %>
            <span class="px-2 py-1 text-xs font-medium text-primary-600 dark:text-primary-400 bg-primary-50 dark:bg-primary-900/10 rounded-full">
              <%= tag %>
            </span>
            <% end %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>