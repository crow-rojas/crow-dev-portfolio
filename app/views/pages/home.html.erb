<div class="relative" data-controller="cv-mode" data-cv-mode-target="content">
  <%# CV Paper Layout %>
  <%= render "pages/cv_paper" %>

  <%# Regular Content %>
  <div class="pt-24 transition-all duration-300 regular-content">
    <%# Sections %>
    <% %w[about projects skills experience education contact].each do |section| %>
    <section id="<%= section %>_section" class="min-h-screen py-16 flex items-center scroll-mt-24 transition-all duration-300" <%= 'data-controller=contact data-contact-target=section' if section == 'contact' %>>
      <div class="container mx-auto px-4 md:px-6">
        <%= render "pages/#{section == 'contact' ? 'contact_form' : section}" %>
      </div>
    </section>
    <% end %>
  </div>

  <%# Mobile Navigation Menu %>
  <nav class="fixed bottom-0 left-0 right-0 bg-white/80 dark:bg-dark-900/80 backdrop-blur-md border-t border-gray-200/50 dark:border-gray-800/50 lg:hidden z-50">
    <div class="container mx-auto px-4 py-2">
      <div class="grid grid-cols-6 gap-2">
        <% %w[about projects skills experience education contact].each do |section| %>
        <a href="#<%= section %>_section" class="flex flex-col items-center p-1 text-gray-600 hover:text-primary-500 dark:text-gray-400 dark:hover:text-primary-500">
          <span class="text-base">
            <%= {
                  'about': '👤',
                  'projects': '💼',
                  'skills': '🛠️',
                  'experience': '📈',
                  'education': '🎓',
                  'contact': '📧'
                }[section.to_sym] %>
          </span>
          <span class="text-[10px] font-medium leading-tight"><%= t("navigation.#{section}") %></span>
        </a>
        <% end %>
      </div>
    </div>
  </nav>
</div>