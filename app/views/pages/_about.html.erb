<div class="space-y-8">
  <%# Header %>
  <div class="space-y-4">
    <h2 class="section-title"><%= t('about.title') %></h2>
    <div class="flex flex-col md:flex-row gap-8 items-center">
      <%# Profile Image %>
      <div class="w-48 h-48 rounded-full overflow-hidden flex items-center justify-center text-white text-4xl font-bold">
        <%# Replace this with an actual image when available %>
        <%= image_tag "profile_circle.png", class: "w-full h-full object-cover", alt: t('about.name') rescue "CR" %>
      </div>

      <%# Basic Info %>
      <div class="space-y-2 text-center md:text-left">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white">
          <%= t('about.name') %>
        </h1>
        <p class="text-lg text-primary-600 dark:text-primary-400 font-medium">
          <%= t('about.role') %>
        </p>
        <p class="text-gray-600 dark:text-gray-400">
          <%= t('about.education') %>
        </p>
        <p class="text-gray-500 dark:text-gray-500 flex items-center justify-center md:justify-start gap-1">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
          </svg>
          <%= t('about.location') %>
        </p>
        <%= link_to "https://github.com/crow-rojas", target: "_blank", rel: "noopener noreferrer",
              class: "flex items-center justify-center md:justify-start gap-2 text-gray-700 dark:text-gray-300 hover:text-primary-500 dark:hover:text-primary-400 transition-colors" do %>
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
          </svg>
          <span class="font-medium">github.com/crow-rojas</span>
        <% end %>
      </div>
    </div>
  </div>

  <%# Description %>
  <div class="card">
    <div class="prose dark:prose-invert max-w-none">
      <% t('about.description').split("\n\n").each do |paragraph| %>
      <p class="text-gray-600 dark:text-gray-300"><%= paragraph %></p>
      <% end %>
    </div>
  </div>

  <%# Interests %>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <% t('about.interests').each do |interest| %>
    <div class="card group hover:border-primary-500 transition-colors">
      <div class="flex items-start gap-4">
        <span class="text-2xl"><%= interest[:icon] %></span>
        <div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-1">
            <%= interest[:title] %>
          </h3>
          <p class="text-gray-600 dark:text-gray-300">
            <%= interest[:description] %>
          </p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>